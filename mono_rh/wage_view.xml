<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_contract_wage_form" model="ir.ui.view">
            <field name="name">hr.contract.wage.form</field>
            <field name="model">hr.contract.wage</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Contract">      
                    <separator colspan="8" string="Wages" />              
                    <group colspan="4" col="8">
                        <field name="name" colspan="2" />
                        <field name="date_registry" colspan="2" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_hr_contract_wage_tree" model="ir.ui.view">
            <field name="name">hr.contract.wage.tree</field>
            <field name="model">hr.contract.wage</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Contract">
                        <field name="name" />
                        <field name="date_registry" />
                </tree>
            </field>
        </record>
    </data>
</openerp>