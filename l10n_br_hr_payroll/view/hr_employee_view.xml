<?xml version="1.0"?>
<openerp>
    <data>
	    <record model="ir.ui.view" id="view_l10n_br_hr_employee_form">
	        <field name="name">l10n_br_hr_employee.form</field>
	        <field name="model">hr.employee</field>
	        <field name="inherit_id" ref="hr.view_employee_form" />
	        <field name="type">form</field>
	        <field name="arch" type="xml">             
	        	<xpath expr="//page[@string='HR Settings']" position="after">
	        		<page string="Documentos">
	        			<form string="Documentos" version="7.0">	
	        				<group> 						
		        				<group string="CTPS">
		    						<field name="ctps" string="Número"/>
		    						<field name="ctps_serie" />
		    						<field name="ctps_data"/>   						
		    					</group>
		        				<group string="RG">
		    						<field name="rg" string="Número"/>
		    						<field name="orgao_exp" />
		    						<field name="rg_emissao"/>  						
		    					</group>
		        				<group string="Reservista">
		    						<field name="creservista" string="Número"/>
		    						<field name="crresv_categ"/>   						
		    					</group>
		        				<group string="Título de Eleitor">
		    						<field name="titulo" string="Número"/>
		    						<field name="zona"/>
		    						<field name="secao"/>  						
		    					</group>	
		        				<group string="Carteira de Motorista">
		    						<field name="cart_motorista" string="Número"/>
		    						<field name="categ_mot"/>
		    						<field name="ginstru"/>  						
		    					</group>		    						    					
	    						<group string="PIS/PASEP">
									<field name="pis_pasep" placeholder="XXX.XXXXX.XX-X" />
								</group>
								<group string="Nome dos Pais">
									<field name="nome_pai"/>
									<field name="nome_mae"/>
								</group>								
							</group>		
						</form>								
	        		</page>
	        		<page string="Cônjuge e Descendentes">
	        			<form string="Cônjuge e Descendentes" version="7.0">
		        			<group colspan="4" col="4">
	        					<field name="nome_conju" />
	        					<field name="tem_filhos"/>	        						        					
	        				</group>
	        				<field name="filhos_ids"  widget="one2many_list" nolabel="1" attrs="{'invisible':[('tem_filhos', '!=', True)]}">
	        					<tree>
							        <field name="filho_nome" />
							        <field name="filho_idade"/>
							        <field name="pensao_alimenticia"/>	                               
							    </tree>
							    <form>
							        <field name="filho_nome" />
							        <field name="filho_idade"/>
									<field name="pensao_alimenticia"/>								        
							    </form>
	        				</field>      			
		        		</form>
	        		</page>
	        	</xpath>    	
	        </field>
	    </record>
    </data>
</openerp>

