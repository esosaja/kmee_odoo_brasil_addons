        <record id="hr_salary_rule_imp_renda_075p" model="hr.salary.rule">
            <field name="code">IR1</field>
            <field name="name">Imposto de Renda - 7,5%</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = 2799.86 >= (contract.wage-employee.n_dependent+INSS) >= 1868.23</field>
            <field name="amount_select">code</field>
			<field name="amount_python_compute">result=(-(((contract.wage-employee.n_dependent+INSS)*0.075)-140.12))</field>
            <field eval="102" name="sequence"/>
            <field name="register_id" ref="hr_ir_contribution_register"/>
            <field name="note">Imposto de Renda Salarial
                De R$1868.23 até R$2799.86
                Alíquota de 7,50%
                Parcela a deduzir R$140.12
            </field>
        </record>

