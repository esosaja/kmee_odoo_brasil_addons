<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_l10n_br_account_invoice_form" model="ir.ui.view">
        <field name="name">l10n_br_account_invoice_payment_mode.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="l10n_br_account.view_l10n_br_account_invoice_form"/>
        <field name="arch" type="xml">
            <page string="Vencimentos">
                <field name="acc_inv_payment_mode_ids" colspan="4"
                       nolabel="1"
                       attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <tree name="Payment Mode" editable="top" create="false"
                          delete="false">
                        <field name="date_maturity"/>
                        <field name="installment_amount" sum="Total"/>
                    </tree>
                </field>
            </page>
            <field name="move_line_receivable_id" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('state', '=', 'draft')]}
                </attribute>
            </field>
            <field name="payment_term" position="attributes">
                <attribute name="on_change">
                    onchange_payment_term_date_invoice( payment_term,
                    date_invoice)
                </attribute>
            </field>
        </field>
        </record>
    </data>
</openerp>
